<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/main_sub_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_alarm_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒"
            android:textSize="@dimen/sub_title_size"
            android:textColor="@color/word_colorPrimaryDark"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/main_subhead_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="先随便写点东西"
            android:textSize="@dimen/sub_title_size"
            android:textColor="@color/word_colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/main_note_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_sub_title_layout">

    </ListView>

</RelativeLayout>
