<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|right"
        android:paddingTop="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:translationZ="4dp">

        <ImageView
            android:id="@+id/rich_text_view_bold"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_format_bold_black_24dp"/>

        <ImageView
            android:id="@+id/rich_text_view_italic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_format_italic_black_24dp"
            android:layout_marginLeft="4dp"/>

        <ImageView
            android:id="@+id/rich_text_view_picture"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_insert_photo_black_24dp"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <EditText
            android:id="@+id/rich_text_view_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入正文"
            android:textSize="@dimen/text_size"
            android:textColor="@color/word_colorAccent"
            android:background="@null"/>

    </ScrollView>

</LinearLayout>